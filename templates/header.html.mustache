<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title>{{{blog_title}}}</title>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <link rel="stylesheet" type="text/css" href="/static/style.css" media="screen" />
  <link rel="alternate" type="application/rss+xml" title="{{{blog_title}}} RSS feed" href="/index.rss" />
  <link href='https://fonts.googleapis.com/css?family=Varela&amp;v2' rel='stylesheet' type='text/css' />
  {{#ga_code}}
  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', '{{{ga_code}}}']);
    _gaq.push(['_setDomainName', '{{{ga_domain}}}']);
    _gaq.push(['_setAllowLinker', true]);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
  {{/ga_code}}
</head>
<body>
  <div id="header">
    <div id="logo">
      <h1> <a href="{{{blog_root}}}">{{{blog_title}}}</a></h1>
      <p>{{{tagline}}}</p>
    </div>

    <div style="float:right">
      <h1>
      </h1>
    </div>
    <div style="clear: both">
    </div>
  </div>


